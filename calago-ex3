 #include <iostream> // Include the necessary library for input/output operations.

using namespace std;

int main() { // Main function where program execution begins.
    float total_bill; // Declare a variable to store the total bill amount.
    float service_charge; // Declare a variable to store the service charge amount.

    cout << "Enter the total bill amount: "; // Prompt the user to enter the total bill amount.
    cin >> total_bill; // Read the total bill amount from the user.

    service_charge = 0.15 * total_bill; // Calculate the service charge (15% of the total bill).

    cout << "Service charge: php" << service_charge << endl; // Display the service charge amount.
    cout << "Total amount to pay: php" << total_bill + service_charge << endl; // Display the total amount to pay (total bill + service charge).

    return 0; // Exit the program.
}
